@model CartViewModel

<h2>Carrinho</h2>

<table class="table table-hover">
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Price.ToString("C2")</td>
            <td>@item.Total</td>
        </tr>
    }
</table>
<div style="margin-left:72%;">
    Total: R$ @Model.Total.ToString("C2")
</div>

<a href="/product/index" class="btn btn-primary">Produtos</a>
<a href="#" class="btn btn-danger">Finalizar Compra</a>
